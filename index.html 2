    <script>
        // Initialize price chart
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('priceChart').getContext('2d');
            
            // Generate mock price data
            const data = [];
            let value = 40000;
            for (let i = 0; i < 100; i++) {
                data.push(value);
                value += Math.random() * 1000 - 500;
            }
            
            const priceChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array.from({length: 100}, (_, i) => i),
                    datasets: [{
                        label: 'BTC/USD',
                        data: data,
                        borderColor: '#6c42f5',
                        backgroundColor: 'rgba(108, 66, 245, 0.1)',
                        borderWidth: 2,
                        pointRadius: 0,
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false,
                                drawBorder: false
                            },
                            ticks: {
                                display: false
                            }
                        },
                        y: {
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)'
                            },
                            ticks: {
                                color: 'rgba(255, 255, 255, 0.7)'
                            }
                        }
                    }
                }
            });
            
            // Update crypto estimate when amount changes
            const amountInput = document.getElementById('amount');
            const amountSlider = document.querySelector('.amount-slider');
            const estimateInput = document.getElementById('estimate');
            
            amountInput.addEventListener('input', function() {
                amountSlider.value = this.value;
                updateEstimate();
            });
            
            amountSlider.addEventListener('input', function() {
                amountInput.value = this.value;
                updateEstimate();
            });
            
            function updateEstimate() {
                const amount = parseFloat(amountInput.value);
                const btcPrice = 41259.87;
                const btcAmount = amount / btcPrice;
                estimateInput.value = btcAmount.toFixed(6) + ' BTC';
            }
            
            // Animate elements on scroll
            const animateOnScroll = function() {
                const elements = document.querySelectorAll('.crypto-card, .chart-container, .trade-form');
                
                elements.forEach(element => {
                    const position = element.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.3;
                    
                    if (position < screenPosition) {
                        element.style.opacity = 1;
                        element.style.transform = 'translateY(0)';
                    }
                });
            };
            
            // Set initial state for animation
            const elements = document.querySelectorAll('.crypto-card, .chart-container, .trade-form');
            elements.forEach(element => {
                element.style.opacity = 0;
                element.style.transform = 'translateY(50px)';
                element.style.transition = 'all 0.8s ease';
            });
            
            window.addEventListener('scroll', animateOnScroll);
            // Initial check
            animateOnScroll();
        });
    </script>
